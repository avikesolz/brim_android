<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brim.ProfileDetails">


    <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:src="@drawable/ic_icon_back"
                />

            <com.brim.Font.SFNFBoldTextView
                android:id="@+id/txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back_button"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Profile"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />


        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.brim.Font.AxiformaRegular
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="CONTACT INFORMATION"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:textSize="14sp"
                android:textColor="@color/textlightGray"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"

                android:weightSum="2"
                >

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/txt_fname"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Primary Email"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/txt_email"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textDarkGray"
                    android:singleLine="true"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:weightSum="2"
                >

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/txt_lname"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Primary Phone"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/txt_phone"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text=""
                    android:inputType="number"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textDarkGray"
                    android:singleLine="true"


                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:weightSum="2"
                >

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/txt_eml"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Alternate Phone"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/txt_alter_phone"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text=""
                    android:inputType="number"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textDarkGray"
                    android:singleLine="true"

                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:weightSum="2"
                >

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/txt_addname"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Street Address"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/txt_adds"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textDarkGray"
                    android:singleLine="true"

                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:weightSum="2"
                >

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/txt_cityname"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="City"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/txt_city"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textDarkGray"
                    android:singleLine="true"

                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:weightSum="2"
                >

                <com.brim.Font.AxiformaMedium
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Province"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <RelativeLayout
                    android:id="@+id/spinner_block"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    >



                        <com.brim.Font.AxiformaRegular
                            android:id="@+id/txt_province"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:layout_marginRight="30dp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/textDarkGray"

                            />


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/down_grey"
                        />


                </RelativeLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:weightSum="2"
                >

                <com.brim.Font.AxiformaMedium
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Postal Code"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/txt_code"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textDarkGray"
                    android:singleLine="true"

                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:id="@+id/chang_pass_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <com.brim.Font.AxiformaRegular
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="PASSWORD"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:textSize="14sp"
                android:textColor="@color/textlightGray"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <com.brim.Font.AxiformaMedium
                android:id="@+id/bitton_chngpass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Change Password"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:textColor="@color/textDarkGray"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                android:layout_marginBottom="20dp"
                />

            </LinearLayout>



        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

        <com.brim.Font.AxiformaMedium
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:text="Save Changes"
            android:textSize="15sp"
            android:gravity="center"
            />

    </RelativeLayout>






</LinearLayout>