<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.brim.Font.AxiformaBook
                android:id="@+id/TXT_Balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5,147.32"
                android:textColor="#414042"
                android:textSize="16sp" />

            <com.brim.Font.AxiformaBook
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TXT_Balance"
                android:text="Current Balance"
                android:textSize="11sp"
                android:textColor="#979797"
                app:textAllCaps="true" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#00C6D8"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/button_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_icon_pay" />

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Make Payment"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/transparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp">

            <com.brim.Font.AxiformaBook
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Credit"
                android:textColor="#414042"
                android:textSize="14sp" />

            <com.brim.Font.AxiformaMedium
                android:id="@+id/TXT_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:text="$2,352.68"
                android:textColor="#414042"
                android:textSize="15sp" />

            <com.brim.Font.AxiformaRegular
                android:id="@+id/TXT_Limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TXT_1"
                android:textColor="#979797"
                android:textSize="11sp"
                android:text="limit $7,500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp">

            <com.brim.Font.AxiformaBook
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Payment"
                android:textColor="#414042"
                android:textSize="14sp" />

            <com.brim.Font.AxiformaMedium
                android:id="@+id/TXT_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:text="$0.00"
                android:textColor="#414042"
                android:textSize="15sp" />

            <com.brim.Font.AxiformaRegular
                android:id="@+id/TXT_Min_Pay_Due_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TXT_2"
                android:textColor="#979797"
                android:textSize="11sp"
                android:text="due May 22, 2017" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp">

            <com.brim.Font.AxiformaBook
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Payment"
                android:textColor="#414042"
                android:textSize="14sp" />

            <com.brim.Font.AxiformaMedium
                android:id="@+id/TXT_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:text="$1,520.00"
                android:textColor="#414042"
                android:textSize="15sp" />

            <com.brim.Font.AxiformaRegular
                android:id="@+id/TXT_LAST_PAID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TXT_3"
                android:textColor="#979797"
                android:textSize="11sp"
                android:text="paid April 20, 2017" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp">

            <com.brim.Font.AxiformaBook
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rewards Balance"
                android:textColor="#414042"
                android:textSize="14sp" />

            <com.brim.Font.AxiformaMedium
                android:id="@+id/TXT_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:text="57,485 pts"
                android:textColor="#414042"
                android:textSize="15sp" />

            <com.brim.Font.AxiformaRegular
                android:id="@+id/TXT_PointL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TXT_4"
                android:textColor="#979797"
                android:textSize="11sp"
                android:text="$574.85" />

        </RelativeLayout>



    </LinearLayout>




</LinearLayout>
