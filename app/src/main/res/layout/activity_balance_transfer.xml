<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brim.BalanceTransfer">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/ic_icon_back"
            />

        <com.brim.Font.SFNFBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Balance Transfer"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <com.brim.Font.AxiformaRegular
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="PAYEE INFORMATION"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:textSize="12sp"
        android:textColor="@color/textlightGray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <com.brim.Font.AxiformaBookEditText
        android:id="@+id/et_crtPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:hint="Payee Card Number"
        android:inputType="number"
        android:textColorHint="@color/textmediamGray"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:maxLength="16"
        android:textColor="@color/textDarkGray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <com.brim.Font.AxiformaBookEditText
        android:id="@+id/et_newPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:hint="Payee Name"
        android:textColorHint="@color/textmediamGray"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/textDarkGray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <com.brim.Font.AxiformaBookEditText
        android:id="@+id/et_conPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:hint="Amount to Transfer"
        android:inputType="number"
        android:textColorHint="@color/textmediamGray"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/textDarkGray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.brim.Font.AxiformaMedium
            android:id="@+id/button_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:text="Save Changes"
            android:textSize="15sp"
            android:gravity="center"
            />
    </RelativeLayout>

</LinearLayout>
