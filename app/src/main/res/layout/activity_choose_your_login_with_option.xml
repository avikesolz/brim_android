<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context="com.brim.ChooseYourLoginWithOption">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">


        <com.brim.Font.AxiformaRegular
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome,John"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            />
        <com.brim.Font.AxiformaRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="11sp"
            android:textColor="@color/textmediamGray"
            android:text="Select your preferred secure sign-in method."/>
        <com.brim.Font.AxiformaRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="11sp"
            android:textColor="@color/textmediamGray"
            android:text="You can always change this later in your settings."/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="5.5">


        <RelativeLayout
            android:id="@+id/rl_pin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:src="@drawable/pin_icon"
                android:layout_centerVertical="true"/>

            <com.brim.Font.AxiformaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_pin"
                android:layout_marginLeft="20dp"
                android:text="PIN"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_pass"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:src="@drawable/password_icon"
                android:layout_centerVertical="true"/>

            <com.brim.Font.AxiformaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_pass"
                android:layout_marginLeft="20dp"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pattern"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_pattern"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:src="@drawable/pattern_icon"
                android:layout_centerVertical="true"/>

            <com.brim.Font.AxiformaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_pattern"
                android:layout_marginLeft="20dp"
                android:text="Pattern"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_touch"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:src="@drawable/fingerprint_icon"
                android:layout_centerVertical="true"/>

            <com.brim.Font.AxiformaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_touch"
                android:layout_marginLeft="20dp"
                android:text="Touch ID"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"/>

        </RelativeLayout>



    </LinearLayout>



</LinearLayout>
