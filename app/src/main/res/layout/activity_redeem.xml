<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brim.Redeem">
    <LinearLayout
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"

        >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/ic_icon_back"
            />

        <com.brim.Font.SFNFBoldTextView
            android:id="@+id/header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Redeem"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/BorderGray"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <RelativeLayout
                android:id="@+id/cust_amt_tab1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="20dp"
                >

                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textlightGray"
                    android:textSize="11sp"
                    android:text="Rewards balance" />


                <com.brim.Font.SFNFBoldTextView
                    android:id="@+id/txt_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkGray"
                    android:textSize="18sp"
                    android:layout_alignParentBottom="true"
                    android:inputType="number"
                    />


                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textlightGray"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:text="DATE" />


                <com.brim.Font.SFNFBoldTextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textDarkGray"
                    android:textSize="18sp"
                    android:layout_alignParentBottom="true"
                    />




            </RelativeLayout>

            <View
                android:id="@+id/border3"
                android:layout_below="@id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BorderGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >


                <com.brim.Font.SFNFBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textlightGray"
                    android:textSize="13sp"
                    android:text="I want to redeem my transaction with points:" />


            </RelativeLayout>

            <View
                android:id="@+id/border4"
                android:layout_below="@id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BorderGray" />

            <RelativeLayout
                android:id="@+id/cust_amt_tab"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="20dp"
                >



                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#979797"
                    android:textSize="11sp"
                    android:text="Custom Amount" />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/et_cust_amount"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/textmediamGray"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:background="@android:color/transparent"
                    android:hint="0.00"
                    />


                <com.brim.Font.SFNFBoldTextView
                    android:id="@+id/txt_max_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkGray"
                    android:layout_alignParentRight="true"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    android:text="" />


            </RelativeLayout>

            <View
                android:id="@+id/border5"
                android:layout_below="@id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BorderGray" />

            <RelativeLayout
                android:id="@+id/curnt_bal_tab"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="20dp"
                >


                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textlightGray"
                    android:textSize="11sp"
                    android:text="You Save" />


                <com.brim.Font.SFNFBoldTextView
                    android:id="@+id/txt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkGray"
                    android:layout_alignParentRight="true"
                    android:textSize="13sp"
                    android:inputType="number"
                    />


                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textlightGray"
                    android:textSize="11sp"
                    android:layout_alignParentBottom="true"
                    android:text="Amount Remaining" />


                <com.brim.Font.SFNFBoldTextView
                    android:id="@+id/txt_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textDarkGray"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    />



            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <com.brim.Font.AxiformaBook
                android:id="@+id/button_continue"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Continue"
                />


        </RelativeLayout>



    </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/button_cross"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_icon_dismiss"
            />

        
        <LinearLayout
            android:id="@+id/details_view"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            android:background="@drawable/mold_rectangle_white"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="20dp"
                >

                <com.brim.Font.SFNFBoldTextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkGray"
                    android:textSize="18sp"
                    android:inputType="number"
                    />

                <com.brim.Font.AxiformaRegular
                    android:id="@+id/txt_cate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textlightGray"
                    android:textSize="11sp"
                    android:layout_alignParentBottom="true"
                    android:text="Rewards balance" />


                <com.brim.Font.AxiformaRegular
                    android:id="@+id/txt_date2"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textlightGray"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:text="" />


                <com.brim.Font.SFNFBoldTextView
                    android:id="@+id/txt_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textDarkGray"
                    android:textSize="18sp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BorderGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textmediamGray"
                        android:textSize="13sp"
                        android:text="Amount to be credited" />

                    <com.brim.Font.AxiformaMedium
                        android:id="@+id/txt_credited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkGray"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                    />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textmediamGray"
                        android:textSize="13sp"
                        android:text="Rewards balance" />

                    <com.brim.Font.AxiformaMedium
                        android:id="@+id/txt_rewards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkGray"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                       />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textmediamGray"
                        android:textSize="13sp"
                        android:text="points to be used" />

                    <com.brim.Font.AxiformaMedium
                        android:id="@+id/txt_used_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkGray"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textmediamGray"
                        android:textSize="13sp"
                        android:text="Points you'll have left" />

                    <com.brim.Font.AxiformaMedium
                        android:id="@+id/txt_points_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkGray"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                 />

                </RelativeLayout>




            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="#00C6D8"
            app:cardCornerRadius="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/details_view"
            app:cardElevation="2dp">

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/button_approve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="Approve"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

        </android.support.v7.widget.CardView>

        <com.brim.Font.AxiformaMedium
            android:id="@+id/top_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/details_view"
            android:gravity="center"
            android:text="You can expect to see your credit applied in 2-3 days"
            android:textColor="@color/textmediamGray"
            android:textSize="11sp" />

        <com.brim.Font.AxiformaMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/top_header"
            android:text="Confirm Your Redemption"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textSize="22sp" />





    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tick"
                />

            <com.brim.Font.AxiformaMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/top_header"
                android:text="Thanks for redeeming!"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="22sp" />

            <com.brim.Font.AxiformaMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/details_view"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="That must've felt good."
                android:textColor="@color/textmediamGray"
                android:textSize="11sp" />


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#00C6D8"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp">

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/button_conti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="Continue"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
