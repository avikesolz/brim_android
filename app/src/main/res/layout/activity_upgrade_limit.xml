<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brim.UpgradeLimit">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/ic_icon_back"
            />

        <com.brim.Font.SFNFBoldTextView
            android:id="@+id/txt_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Update Family Card"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <com.brim.Font.AxiformaRegular
        android:id="@+id/txt_limit_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="UPDATE CARD INFORMATION"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:textSize="12sp"
        android:textColor="@color/textlightGray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"

                android:weightSum="2"
                >

                <com.brim.Font.AxiformaRegular
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Update Credit Limit"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/textDarkGray"
                    />

                <com.brim.Font.AxiformaBookEditText
                    android:id="@+id/txt_limit"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textDarkGray"
                    android:singleLine="true"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BorderGray"
                />

            <com.brim.Font.AxiformaRegular
                android:id="@+id/button_ChngPin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:text="Change Pin"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/textDarkGray"
                />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_primary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white"
            android:weightSum="2"
            android:visibility="gone"
            >

            <com.brim.Font.AxiformaRegular
                android:id="@+id/txt_crelimit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Credit Limit"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/textDarkGray"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/down_grey"
                    android:padding="10dp"
                    />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/BorderGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.brim.Font.AxiformaMedium
            android:id="@+id/button_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:text="Save Changes"
            android:textSize="15sp"
            android:gravity="center"
            />
    </RelativeLayout>

</LinearLayout>
