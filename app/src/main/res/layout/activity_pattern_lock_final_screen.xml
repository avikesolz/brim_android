<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brim.PatternLock"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center">

        <com.brim.Font.AxiformaRegular
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="22sp"/>

        <com.brim.Font.AxiformaRegular
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign-in with your pattern."
            android:textSize="11sp"
            android:textColor="@color/textlightGray"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <com.andrognito.patternlockview.PatternLockView
            android:id="@+id/pattern_lock_view_final"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:wrongStateColor="#cf0404"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:weightSum="2.5"
        android:gravity="center_horizontal">

        <com.brim.Font.AxiformaRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need help signing in?"
            android:layout_marginBottom="15dp"
            android:textSize="11sp"
            android:textColor="@color/textlightGray"/>

        <LinearLayout
            android:id="@+id/button_signin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/mold_rectangle_blue_white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Sign-In with Password"
                android:textSize="16sp"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
